<Window x:Class="VideoFileRenamer.UI.Tasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tasks" Height="300" Width="300" Loaded="Window_Loaded">
    <ListBox x:Name="ListTasks">
        <Grid x:Name="ProgressGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="Message" Grid.Row="0"/>
            <ProgressBar HorizontalAlignment="Left" Width="250" Height="15" x:Name="ProgressBar" Grid.Row="1"/>
        </Grid>
        <ListBox x:Name="MessagePanel" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            
        </ListBox>
    </ListBox>
</Window>
