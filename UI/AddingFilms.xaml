<Window x:Class="VideoFileRenamer.UI.AddingFilms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddingFilms" Height="300" Width="300" Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate x:Key="AddNewFilms">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="1" Content="{Binding  Name}" ></Label>
                <Label Grid.Column="1" Grid.Row="1" Content="{Binding Year}"></Label>
               
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Path=File.Name }"/>
        <ListBox x:Name="SelectionFilmBox" Grid.Row="1" HorizontalAlignment="Left" Height="249" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" ItemTemplate="{DynamicResource AddNewFilms}" ItemsSource="{Binding List}"/>
        <Button x:Name="NextButton" Click="NextButton_Click"/>
    </Grid>
</Window>
